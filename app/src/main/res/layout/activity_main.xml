<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_storm_sky">

    <!-- 身份选择界面 -->
    <LinearLayout
        android:id="@+id/identity_selection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="@color/semi_transparent_toolbar_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_identity"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/lemon_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/lemon"
                    android:contentDescription="@string/lemon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lemon"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tomato_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/tomato"
                    android:contentDescription="@string/tomato" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tomato"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 风暴瓶界面 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/storm_bottle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- 可折叠的顶部功能栏 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/semi_transparent_toolbar_bg"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 折叠状态的圆形按钮 -->
            <LinearLayout
                android:id="@+id/collapsed_toolbar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible">

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/white"
                    android:layout_marginBottom="4dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/white"
                    android:layout_marginBottom="4dp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="2dp"
                    android:background="@color/white" />

            </LinearLayout>

            <!-- 展开状态的功能栏 - 毛玻璃效果设计 -->
            <LinearLayout
                android:id="@+id/expanded_toolbar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/glass_background"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:visibility="gone">

                <!-- 顶部标题栏 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                                         <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight="1"
                         android:text="控制面板"
                         android:textSize="20sp"
                         android:textColor="@color/black"
                         android:textStyle="bold" />

                     <!-- 关闭按钮 -->
                     <ImageView
                         android:id="@+id/close_button"
                         android:layout_width="28dp"
                         android:layout_height="28dp"
                         android:background="@drawable/close_button_background"
                         android:clickable="true"
                         android:focusable="true"
                         android:src="@drawable/ic_close"
                         android:padding="6dp"
                         android:scaleType="fitCenter" />
                </LinearLayout>

                <!-- 功能区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                                         <!-- 天气信息卡片 -->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="@drawable/button_glass"
                         android:padding="14dp"
                         android:layout_marginBottom="14dp">

                                                 <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="🌤️ 天气信息"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:layout_marginBottom="12dp" />

                                                 <TextView
                             android:id="@+id/weather_details"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:text=""
                             android:textSize="14sp"
                             android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btn_reset_weather"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="恢复真实天气"
                            android:textSize="12sp"
                            android:background="@drawable/button_function"
                            android:textColor="@color/white"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                                         <!-- 表情控制卡片 -->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="@drawable/button_glass"
                         android:padding="14dp"
                         android:layout_marginBottom="14dp">

                                                 <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="😊 表情控制"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:layout_marginBottom="12dp" />

                        <!-- 表情按钮网格 -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:columnCount="3"
                            android:rowCount="2"
                            android:alignmentMode="alignMargins"
                            android:useDefaultMargins="true">

                            <Button
                                android:id="@+id/btn_happy"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_columnWeight="1"
                                android:text="😊"
                                android:textSize="16sp"
                                android:background="@drawable/button_emotion"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_sad"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_columnWeight="1"
                                android:text="😢"
                                android:textSize="16sp"
                                android:background="@drawable/button_emotion"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_calm"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_columnWeight="1"
                                android:text="😐"
                                android:textSize="16sp"
                                android:background="@drawable/button_emotion"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_angry"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_columnWeight="1"
                                android:text="😠"
                                android:textSize="16sp"
                                android:background="@drawable/button_emotion"
                                android:textColor="@color/white" />

                            <Button
                                android:id="@+id/btn_confused"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_columnWeight="1"
                                android:text="😕"
                                android:textSize="16sp"
                                android:background="@drawable/button_emotion"
                                android:textColor="@color/white" />
                        </GridLayout>
                    </LinearLayout>

                                         <!-- 天气测试卡片 -->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="@drawable/button_glass"
                         android:padding="14dp"
                         android:layout_marginBottom="14dp">

                                                 <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="🌦️ 天气测试"
                             android:textSize="16sp"
                             android:textColor="@color/black"
                             android:textStyle="bold"
                             android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp">

                            <Button
                                android:id="@+id/btn_sunny"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="☀️"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_rainy"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="🌧️"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_cloudy"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="☁️"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_snowy"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="❄️"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>

                                         <!-- 季节测试卡片 -->
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:background="@drawable/button_glass"
                         android:padding="14dp">

                                                 <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="🍃 季节测试"
                             android:layout_marginBottom="12dp"
                             android:textColor="@color/black"
                             android:textSize="16sp"
                             android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_spring"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="🌸"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_summer"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="🌻"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_autumn"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="🍂"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white"
                                android:layout_marginEnd="4dp" />

                            <Button
                                android:id="@+id/btn_winter"
                                android:layout_width="0dp"
                                android:layout_height="36dp"
                                android:layout_weight="1"
                                android:text="❄️"
                                android:textSize="14sp"
                                android:background="@drawable/button_function"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 风暴瓶区域 - 重新设计布局系统，明确位置关系 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottle_container"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 瓶底 (最底层，与瓶子大小一致) -->
            <ImageView
                android:id="@+id/bottle_bottom"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:src="@drawable/bottle_bottom_spring"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp" />

            <!-- 小水果 (夹在瓶底和瓶子之间，位于瓶子靠下四分之一处) -->
            <ImageView
                android:id="@+id/small_fruit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/small_tomato_sunny"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="@id/bottle_bottom"
                app:layout_constraintBottom_toBottomOf="@id/bottle_bottom"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="50dp" />

            <!-- 瓶子 (遮盖瓶底和小水果，与瓶底大小一致) -->
            <ImageView
                android:id="@+id/bottle"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:src="@drawable/bottle_sunny"
                android:scaleType="fitCenter"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="5dp" />

            <!-- 大水果身体 (左侧，被瓶子略微遮挡) -->
            <ImageView
                android:id="@+id/big_fruit_body"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/lemon_body"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="20dp" />

            <!-- 大水果表情 (位于身体靠右四分之一处) -->
            <ImageView
                android:id="@+id/big_fruit_expression"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/lemon_expression_happy"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="@id/big_fruit_body"
                app:layout_constraintEnd_toEndOf="@id/big_fruit_body"
                app:layout_constraintTop_toTopOf="@id/big_fruit_body"
                app:layout_constraintBottom_toBottomOf="@id/big_fruit_body"
                android:layout_marginStart="37dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
