<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 身份选择界面 -->
    <LinearLayout
        android:id="@+id/identity_selection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_identity"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/lemon_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/lemon_placeholder"
                    android:contentDescription="@string/lemon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lemon"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tomato_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/tomato_placeholder"
                    android:contentDescription="@string/tomato" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tomato"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 风暴瓶界面 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/storm_bottle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- 顶部工具栏 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/gray_dark"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/weather_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_info"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/weather_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/gray_light"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 风暴瓶区域 -->
        <FrameLayout
            android:id="@+id/bottle_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 瓶底 -->
            <ImageView
                android:id="@+id/bottle_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottle_bottom_spring"
                android:scaleType="fitCenter" />

            <!-- 小水果 -->
            <ImageView
                android:id="@+id/small_fruit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginBottom="40dp"
                android:src="@drawable/small_tomato_sunny"
                android:scaleType="fitCenter" />

            <!-- 瓶子 -->
            <ImageView
                android:id="@+id/bottle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottle_sunny"
                android:scaleType="fitCenter" />

            <!-- 大水果身体 -->
            <ImageView
                android:id="@+id/big_fruit_body"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                android:src="@drawable/lemon_body"
                android:scaleType="fitCenter" />

            <!-- 大水果右侧腿 -->
            <ImageView
                android:id="@+id/big_fruit_right_leg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/lemon_right_leg"
                android:scaleType="fitCenter" />

            <!-- 大水果右侧胳膊 -->
            <ImageView
                android:id="@+id/big_fruit_right_arm"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/lemon_right_arm"
                android:scaleType="fitCenter" />

            <!-- 大水果左侧腿 -->
            <ImageView
                android:id="@+id/big_fruit_left_leg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/lemon_left_leg"
                android:scaleType="fitCenter" />

            <!-- 大水果左侧胳膊 -->
            <ImageView
                android:id="@+id/big_fruit_left_arm"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/lemon_left_arm"
                android:scaleType="fitCenter" />

            <!-- 大水果表情 -->
            <ImageView
                android:id="@+id/big_fruit_expression"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="80dp"
                android:src="@drawable/lemon_expression_happy"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <!-- 底部工具栏 -->
        <LinearLayout
            android:id="@+id/bottom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray_dark"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 表情选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expression"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_happy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/happy"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_sad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sad"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_calm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calm"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_angry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/angry"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_confused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confused"
                        android:layout_marginEnd="8dp" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- 测试天气按钮 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_weather"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_sunny"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sunny"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_rainy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rainy"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_cloudy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cloudy"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_snowy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/snowy"
                        android:layout_marginEnd="8dp" />

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
