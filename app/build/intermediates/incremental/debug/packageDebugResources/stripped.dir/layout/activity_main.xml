<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- 身份选择界面 -->
    <LinearLayout
        android:id="@+id/identity_selection_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_identity"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_marginBottom="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/lemon_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/lemon"
                    android:contentDescription="@string/lemon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lemon"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tomato_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/tomato"
                    android:contentDescription="@string/tomato" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tomato"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="16dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 风暴瓶界面 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/storm_bottle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <!-- 顶部工具栏 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/top_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/gray_dark"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/weather_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/weather_info"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/weather_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/gray_light"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- 风暴瓶区域 -->
        <FrameLayout
            android:id="@+id/bottle_container"
            android:layout_width="240dp"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/top_toolbar"
            app:layout_constraintBottom_toTopOf="@id/bottom_toolbar"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 大水果左侧腿 (Behind body, close to bottle) -->
            <ImageView
                android:id="@+id/big_fruit_left_leg"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="-20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/fruit_leg"
                android:scaleType="fitCenter" />

            <!-- 大水果左侧胳膊 (Behind body, close to bottle) -->
            <ImageView
                android:id="@+id/big_fruit_left_arm"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="-20dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/fruit_arm"
                android:scaleType="fitCenter" />

            <!-- 大水果身体 (Bottom-most of big fruit parts behind bottle, occludes left limbs) -->
            <ImageView
                android:id="@+id/big_fruit_body"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="-100dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/lemon_body"
                android:scaleType="fitCenter" />

            <!-- 大水果表情 (On top of body) -->
            <ImageView
                android:id="@+id/big_fruit_expression"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/lemon_expression_happy"
                android:scaleType="fitCenter" />

            <!-- 瓶底 (Above the main big fruit parts) -->
            <ImageView
                android:id="@+id/bottle_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottle_bottom_spring"
                android:scaleType="fitCenter" />

            <!-- 小水果 (Above bottle_bottom, below bottle) -->
            <ImageView
                android:id="@+id/small_fruit"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="16dp"
                android:src="@drawable/small_tomato_sunny"
                android:scaleType="fitCenter" />

            <!-- 瓶子 (Above small_fruit) -->
            <ImageView
                android:id="@+id/bottle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bottle_sunny"
                android:scaleType="fitCenter" />

            <!-- 大水果右侧腿 (In front of bottle) -->
            <ImageView
                android:id="@+id/big_fruit_right_leg"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="-90dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/fruit_leg"
                android:scaleType="fitCenter" />

            <!-- 大水果右侧胳膊 (In front of bottle, very Top-most) -->
            <ImageView
                android:id="@+id/big_fruit_right_arm"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="-90dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/fruit_arm"
                android:scaleType="fitCenter" />

        </FrameLayout>

        <!-- 底部工具栏 -->
        <LinearLayout
            android:id="@+id/bottom_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/gray_dark"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 表情选择 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expression"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_happy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/happy"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_sad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sad"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_calm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calm"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_angry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/angry"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btn_confused"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confused"
                        android:layout_marginEnd="8dp" />

                </LinearLayout>

            </HorizontalScrollView>

                         <!-- 测试天气按钮 -->
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/test_weather"
                 android:textSize="16sp"
                 android:textColor="@color/white"
                 android:layout_marginBottom="8dp" />

             <HorizontalScrollView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="16dp">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <Button
                         android:id="@+id/btn_sunny"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/sunny"
                         android:layout_marginEnd="8dp" />

                     <Button
                         android:id="@+id/btn_rainy"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/rainy"
                         android:layout_marginEnd="8dp" />

                     <Button
                         android:id="@+id/btn_cloudy"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/cloudy"
                         android:layout_marginEnd="8dp" />

                     <Button
                         android:id="@+id/btn_snowy"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/snowy"
                         android:layout_marginEnd="8dp" />

                 </LinearLayout>

             </HorizontalScrollView>

             <!-- 测试季节按钮 -->
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/test_season"
                 android:textSize="16sp"
                 android:textColor="@color/white"
                 android:layout_marginBottom="8dp" />

             <HorizontalScrollView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">

                 <LinearLayout
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:orientation="horizontal">

                     <Button
                         android:id="@+id/btn_spring"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/spring"
                         android:layout_marginEnd="8dp" />

                     <Button
                         android:id="@+id/btn_summer"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/summer"
                         android:layout_marginEnd="8dp" />

                     <Button
                         android:id="@+id/btn_autumn"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/autumn"
                         android:layout_marginEnd="8dp" />

                     <Button
                         android:id="@+id/btn_winter"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="@string/winter"
                         android:layout_marginEnd="8dp" />

                 </LinearLayout>

             </HorizontalScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
